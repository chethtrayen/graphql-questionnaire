{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    // This has been left in as an option as it needs to be overriden
    // in certain cases, e.g., when using NestJS.
    // "strictPropertyInitialization": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@config": ["src/config/index.ts"],
      "@context": ["src/app/graphql/context"],
      "@modules/*": ["src/app/modules/*"],
      "@prismaClient": ["src/prisma-client.ts"],
      "@testUtils": ["test/utils/index.ts"],
      "@type": ["src/types/index.ts"]
    },
    "rootDirs": ["src", "tests"]
  }
}
